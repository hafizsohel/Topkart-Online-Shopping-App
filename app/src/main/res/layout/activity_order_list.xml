<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.OrderList">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_order_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8FD5F4"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="My Order List :" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orderList_rec"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_order_toolbar"
        tools:listitem="@layout/my_oder_item" />

</androidx.constraintlayout.widget.ConstraintLayout>